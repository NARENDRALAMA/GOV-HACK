# Environment Configuration for Agentic Community Assistant

# Application Settings
APP_NAME=Agentic Community Assistant
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Privacy and Audit Settings
ARTIFACT_TTL_DAYS=30
AUDIT_LOG_LEVEL=INFO
CONSENT_TTL_DAYS=30

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# RAG and Knowledge Settings
KNOWLEDGE_BASE_PATH=app/rag/knowledge.md
EMBEDDING_MODEL=local  # or 'openai' for external embeddings

# Government API Settings (for future integration)
NSW_BDM_API_URL=https://api.bdm.nsw.gov.au
MEDICARE_API_URL=https://api.medicare.gov.au
API_TIMEOUT=30

# Storage Settings
ARTIFACTS_DIR=_artifacts
VAULT_DIR=_artifacts/vault
MAX_FILE_SIZE=10485760  # 10MB

# Monitoring and Logging
ENABLE_METRICS=true
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
